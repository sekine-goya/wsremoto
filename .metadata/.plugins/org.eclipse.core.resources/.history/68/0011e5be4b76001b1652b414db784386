package decisao;

import javax.swing.JOptionPane;

public class DecisaoSimplesLista2 {

	public static void main(String[] args) {
	
		String Nome = JOptionPane.showInputDialog("Nome: ").toUpperCase();
		short Dias = Short.parseShort(JOptionPane.showInputDialog("Dias: ").toUpperCase());
		if (Dias<=0) {
			System.out.println("Valor Inválido");
		}
		if (Dias<5) {
			System.out.println("Valor com taxa: " 80 + (Dias * 8));
	
		
	
	
			
			
			
			
		}
		
		

	}

}
